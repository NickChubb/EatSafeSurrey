<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.UpdateActivity">

    <Button
        android:id="@+id/button_cancel_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel Updating"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.63" />

    <TextView
        android:id="@+id/text_updating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/button_cancel_update"
        app:layout_constraintEnd_toEndOf="@+id/button_cancel_update"
        app:layout_constraintStart_toStartOf="@+id/button_cancel_update"
        tools:text="Updating..." />

    <ImageView
        android:id="@+id/icon_update_arrow"
        android:layout_width="142dp"
        android:layout_height="179dp"
        app:layout_constraintBottom_toTopOf="@+id/text_updating"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/updating" />
</androidx.constraintlayout.widget.ConstraintLayout>