<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/high_hazard_layout_dialog_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:padding="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/high_hazard_layout_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_dialog_background"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_high_hazard_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/high_hazard_background"
            android:padding="10dp"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text=""
            app:layout_constraintTop_toTopOf ="parent"
            />

        <ImageView
            android:id="@+id/image_high_hazard_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="16dp"
            android:contentDescription="@string/text_low_hazard"
            android:tint="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="@id/text_high_hazard_dialog_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_high_hazard_dialog_title" />

        <TextView
            android:id="@+id/text_high_hazard_dialog_restaurant_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/text_high_hazard_dialog_title" />

        <TextView
            android:id="@+id/text_high_hazard_dialog_hazard_levels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/title_hazard_level"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/text_high_hazard_dialog_title"
            app:layout_constraintStart_toEndOf="@id/image_high_hazard_icon"
            app:layout_constraintTop_toTopOf="@id/text_high_hazard_dialog_title" />

        <TextView
            android:id="@+id/text_high_hazard_dialog_hazard_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/text_high_hazard_dialog_title"
            app:layout_constraintStart_toEndOf="@id/text_high_hazard_dialog_hazard_levels"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_high_hazard_dialog_restaurant_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_high_hazard_dialog_restaurant_name" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/high_hazard_dialog_go_to_restaurant_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/high_hazard_btn_background"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/high_hazard_layout_dialog"
        app:layout_constraintTop_toBottomOf="@id/high_hazard_layout_dialog"
        />

</androidx.constraintlayout.widget.ConstraintLayout>