<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/inspectionHarzardLevelImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/sym_def_app_icon"
        tools:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/inspectionDetailsDateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"

        android:textColor="@color/colorBlack"
        android:textSize="14sp"
        android:text="@string/basic_date_format"
        app:layout_constraintStart_toEndOf="@id/inspectionHarzardLevelImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/numberOfIssuesTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:text="@string/text_issues"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/numberOfCriticalIssuesTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorBlack"
        android:textSize="14sp"
        android:text="@string/text_critical_issues"
        app:layout_constraintStart_toEndOf="@id/inspectionHarzardLevelImageView"
        app:layout_constraintTop_toBottomOf="@id/inspectionDetailsDateTV" />

    <TextView
        android:id="@+id/numberOfNonCriticalIssuesTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorBlack"
        android:textSize="14sp"
        android:text="@string/text_non_critical_issues"
        app:layout_constraintStart_toEndOf="@id/inspectionHarzardLevelImageView"
        app:layout_constraintTop_toBottomOf="@id/numberOfCriticalIssuesTV" />

    <TextView
        android:id="@+id/hazardLevelsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="@string/title_hazard_level"
        android:textColor="@color/colorBlack"
        app:layout_constraintBottom_toBottomOf="@id/inspectionHarzardLevelImageView"
        app:layout_constraintStart_toEndOf="@id/inspectionHarzardLevelImageView"
        app:layout_constraintTop_toBottomOf="@id/numberOfNonCriticalIssuesTV" />

    <TextView
        android:id="@+id/levelsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:textColor="@color/colorGreen"
        android:textStyle="bold"
        android:text="@string/text_low_hazard"
        app:layout_constraintStart_toEndOf="@id/hazardLevelsTV"
        app:layout_constraintTop_toTopOf="@id/hazardLevelsTV"
        app:layout_constraintBottom_toBottomOf="@id/hazardLevelsTV"/>
</androidx.constraintlayout.widget.ConstraintLayout>