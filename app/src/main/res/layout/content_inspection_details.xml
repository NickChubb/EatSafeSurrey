<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".InspectionDetailsActivity"
    tools:showIn="@layout/activity_inspection_details">

    <TextView
        android:id="@+id/inspectionDetailsDateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/inspection_details_date"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/inspectionDetailsTypeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/inspection_details_type"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inspectionDetailsDateTV" />

    <TextView
        android:id="@+id/inspectionDetailsCriticalIssuesTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/inspection_details_critical_issues"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inspectionDetailsTypeTV" />

    <TextView
        android:id="@+id/inspectionDetailsNonCriticalIssuesTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/inspection_details_non_critical_issues"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inspectionDetailsCriticalIssuesTV" />

    <ImageView
        android:id="@+id/inspectionDetialsHazardSignLeftImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/green_warning_sign"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inspectionDetailsNonCriticalIssuesTV" />

    <TextView
        android:id="@+id/inspectionDetailsHazardLevelTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/inspection_details_hazard_level"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/inspectionDetialsHazardSignLeftImageView"
        app:layout_constraintEnd_toStartOf="@+id/inspectionDetialsHazardSignRightImageView"
        app:layout_constraintStart_toEndOf="@+id/inspectionDetialsHazardSignLeftImageView"
        app:layout_constraintTop_toTopOf="@+id/inspectionDetialsHazardSignLeftImageView" />

    <ImageView
        android:id="@+id/inspectionDetialsHazardSignRightImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/green_warning_sign"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inspectionDetailsNonCriticalIssuesTV" />

    <TextView
        android:id="@+id/inspectionDetailsViolationTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/inspection_details_violations"
        android:textColor="@color/colorBlack"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inspectionDetialsHazardSignLeftImageView" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/violationsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="401dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/inspectionDetailsViolationTV"
        tools:layout_editor_absoluteX="1dp" />
</androidx.constraintlayout.widget.ConstraintLayout>