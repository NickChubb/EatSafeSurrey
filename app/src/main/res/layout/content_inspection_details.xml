<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".InspectionDetailsActivity"
    tools:showIn="@layout/activity_inspection_details">

    <TextView
        android:id="@+id/inspectionDetailsDateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/text_inspection_date"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/inspectionDetailsTypeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/text_inspection_type"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inspectionDetailsDateTV" />

    <TextView
        android:id="@+id/inspectionDetailsCriticalIssuesTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:text="@string/text_critical_issues"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inspectionDetailsTypeTV" />

    <TextView
        android:id="@+id/inspectionDetailsNonCriticalIssuesTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:text="@string/text_non_critical_issues"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inspectionDetailsCriticalIssuesTV" />

    <ImageView
        android:id="@+id/inspectionDetailsHazardSignLeftImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/green_warning_sign"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inspectionDetailsNonCriticalIssuesTV"
        />

    <TextView
        android:id="@+id/text_inspection_details_hazard_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        android:text="@string/title_hazard_level"
        app:layout_constraintBottom_toBottomOf="@id/inspectionDetailsHazardSignLeftImageView"
        app:layout_constraintStart_toEndOf="@id/inspectionDetailsHazardSignLeftImageView"
        app:layout_constraintTop_toTopOf="@id/inspectionDetailsHazardSignLeftImageView" />

    <TextView
        android:id="@+id/text_inspection_details_hazard_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8sp"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        android:text="@string/text_low_hazard"
        app:layout_constraintBottom_toBottomOf="@id/inspectionDetailsHazardSignLeftImageView"
        app:layout_constraintStart_toEndOf="@id/text_inspection_details_hazard_title"
        app:layout_constraintTop_toTopOf="@id/inspectionDetailsHazardSignLeftImageView" />

    <TextView
        android:id="@+id/inspectionDetailsViolationTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/title_violations"
        android:textColor="@color/colorBlack"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inspectionDetailsHazardSignLeftImageView" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/violationsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="401dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/inspectionDetailsViolationTV"
        tools:layout_editor_absoluteX="1dp" />
</androidx.constraintlayout.widget.ConstraintLayout>